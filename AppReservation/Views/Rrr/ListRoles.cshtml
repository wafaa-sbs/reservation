@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "All Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-5 text-left">
    <h2> List of Roles </h2>
</div>


@if (Model.Any())
{
<table class="table table-hover text-center">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ foreach (var role in Model)
                            {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>

                <td>
                    <form method="post" asp-action="DeleteRole" asp-controller="Role" asp-route-id="@role.Id">
                        <a class="btn btn-warning text-white btn-sm" asp-action="EditRole" asp-controller="Role" asp-route-id="@role.Id">Update</a>
                        <button type="submit" class="btn btn-secondary btn-sm" onclick="return confirm('Are you sure ??')">Delete</button>
                    </form>

                </td>
            </tr> } }

    </tbody>
</table> }
            else
            {
<div class="my-5">
    <div class="card">
        <div class="card-header">
            No roles created yet

        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button bellow to create role
            </h5>
        </div>
    </div>
</div>}

<div class="my-5 text-center">
    <a asp-action="AddRole">Add Role</a> |
    <a asp-action="index" asp-controller="student">Back to Home</a>
</div>

<div class=" my-3 text-danger" asp-validation-summary="All"></div>