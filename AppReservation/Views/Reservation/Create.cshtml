@model AppReservation.Models.Reservation

@{ 
    var types = ViewBag.types;
}

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label style="font-weight: 600; color: #184D74" asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label style="font-weight: 600; color: #184D74" asp-for="Status" class="control-label" ></label>
                <input value="en-attente" asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="font-weight: 600; color: #184D74" asp-for="Cause" class="control-label" ></label>
                <input style="border-color: grey" asp-for="Cause" class="form-control" />
                <span asp-validation-for="Cause" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="font-weight: 600; color: #184D74" asp-for="ReservId" class="control-label"></label>
                <select asp-for="ReservId" class="browser-default control-label custom-select">
                    <option selected>Open this select menu</option>
                    @foreach (var reserType in types)
                    {
                        <option value="@reserType.Id">@reserType.name</option>

                    }

                </select>
                <span asp-validation-for="ReservId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-info" style="" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info"  asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
